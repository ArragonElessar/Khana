<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs')%>
        <script src="../js/address.js" type="text/javascript"></script>
        <script type="text/javascript">
            address('<%=JSON.stringify(session)%>', '<%=JSON.stringify(type)%>')
        </script>
</head>
</head>

<body style="background: var(--bs-gray);">
    <header>
        <script type="text/javascript" src='../js/navbar.js'></script>
        <%- include('./partials/nav.ejs') %>
    </header>
    <main>
        <section class="text-center login-clean" style="background: var(--bs-gray);">
            <form>
                <h2 class="visually-hidden">Login Form</h2>
                <div class="mb-3">
                    <select class="form-select" name="type" id="type">
                        <option value="home">Home</option>
                        <option value="work">Work</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div class="mb-3">
                    <select class="form-select" name="state" id='state_select'>
                        <option value="select" selected="">Select State</option>
                        <% for(let i=0; i < states_list.all_states.length; i++) { %>
                            <option value='<%=states_list.all_states[i]%>' id='<%=states_list.all_states[i]%>'>
                                <%=states_list.all_states[i]%>
                            </option>
                            <%}%>
                    </select>
                </div>
                <div class="mb-3">
                    <select class="form-select" name="city" id="city_select">
                        <option value="select" id='select_city_option' selected="">Select City</option>
                    </select>
                </div>
                <div class="mb-3">
                    <input class="form-control" type="text" name="addline1" id="addline1" placeholder="Address Line 1">
                </div>
                <div class="mb-3">
                    <input class="form-control" type="text" name="addline2" id="addline2" placeholder="Address Line 2">
                </div>
                <div class="mb-3"></div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="formCheck-1">
                    <label class="form-check-label" for="formCheck-1" style="text-align: left;">Use my location for
                        address</label>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary d-block w-100" type="button" id='update-address'
                        style="background: var(--bs-indigo);">Save</button>
                </div>
            </form>
        </section>

    </main>
    <%- include('./partials/footer.ejs') %>

</body>

</html>